---
layout: base
templateClass: tmpl-post
---

<a href="javascript:window.history.back();" class="post-page__back-button">
  <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" width="24" height="24"><path fill="none" d="M0 0h24v24H0z"/><path d="M7.828 11H20v2H7.828l5.364 5.364-1.414 1.414L4 12l7.778-7.778 1.414 1.414z"/></svg>
  &nbsp;&nbsp;Back
</a>

{# Title #}
<h1 class="post-page__title">{{ title }}</h1>

{# Date #}
<time class="post-page__date" datetime="{{ page.date | dateToISO }}">{{ page.date | dateToFormat('MMMM d, yyyy') }}</time>

{# Content #}
<div class="post-page__content">
    {{ content | safe }}
</div>

{# Tags #}
<div class="post-page__tag-wrapper">
{%- for tag in tags | filterPostsTagList -%}
{%- set tagUrl %}/post-tags/{{ tag | slug }}/{% endset -%}
<a href="{{ tagUrl | url }}" class="post-tag">#{{ tag }}</a>
{%- endfor %}
</div>

{%- if collections.posts %}
{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<hr>
<ul>
  {%- if nextPost %}<li>Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></li>{% endif %}
  {%- if previousPost %}<li>Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}